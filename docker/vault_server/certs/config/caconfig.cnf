[ ca ]
default_ca = local_ca

[ local_ca ]
ca_dir = certs/vaultCA
database_dir = certs/config/database
certificate = $ca_dir/cacert.pem
private_key = $ca_dir/private/cakey.pem
new_certs_dir = $ca_dir/server/signedcerts
serial = $database_dir/serial
database = $database_dir/index.txt

default_crl_days = 365
default_days = 1825
default_md = sha256

policy = local_ca_policy
x509_extensions = local_ca_extensions

copy_extensions = copy

[ local_ca_policy ]
commonName = supplied
stateOrProvinceName = supplied
countryName = supplied
emailAddress = supplied
organizationName = supplied
organizationalUnitName = supplied

[ local_ca_extensions ]
basicConstraints = CA:false

[ req ]
default_bits = 2048
default_keyfile = certs/vaultCA/private/cakey.pem
default_md = sha256
prompt = no
distinguished_name = root_ca_distinguished_name
x509_extensions = root_ca_extensions

[ root_ca_distinguished_name ]
commonName = My Root Certificate Authority
stateOrProvinceName = NSW
countryName = AU
emailAddress = support@example.com
organizationName = Example Org
organizationalUnitName = Development

[ root_ca_extensions ]
basicConstraints = CA:true
