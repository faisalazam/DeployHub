VM_CPUS = "4"
VM_MEMORY = "8192"
SHOW_VM_GUI = false
VM_NAME = "WINDOWS_SERVER"
VAGRANT_BOX_VERSION = "1.0.2"
VAGRANT_PROVIDER = "virtualbox"
VAGRANT_BOX_NAME = "rconde/windows2019"
VM_HOSTNAME = "windowsremote" # Ensure it complies with hostname rules
VM_NETWORK_IP = "192.168.100.10"

Vagrant.configure("2") do |config|
  config.vm.box = VAGRANT_BOX_NAME
  config.vm.box_version = VAGRANT_BOX_VERSION

  # Network Configuration (Static IP)
  config.vm.network "private_network", ip: VM_NETWORK_IP

  # VM Provider Configuration (VirtualBox)
  config.vm.provider VAGRANT_PROVIDER do |vb|
    vb.cpus = VM_CPUS
    vb.name = VM_NAME
    vb.gui = SHOW_VM_GUI
    vb.memory = VM_MEMORY
  end

  # Hostname
  config.vm.hostname = VM_HOSTNAME
end
